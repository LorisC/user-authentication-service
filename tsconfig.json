{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "declaration",
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "test/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
